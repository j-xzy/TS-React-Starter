{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "array-type": [
      true,
      "array-simple"
    ],
    "no-var-requires": false,
    "forin": false ,
    "object-literal-sort-keys": false,
    "ordered-imports": true,
    "arrow-parens": true,
    "no-var-keyword": true,
    "max-classes-per-file":false,
    "max-line-length": false,
    "only-arrow-functions": false,
    "no-unused-expression": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      4
    ],
    "no-eval": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-unsafe-finally": true,
    "no-default-export": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  },
  "jsRules": {
    "triple-equals": [
      true,
      "allow-null-check"
    ]
  },
  "defaultSeverity": "warning"
}